@model ProjectTracker.Application.Dtos.TaskDto
@{
    ViewData["Title"] = "Delete Task";
    var projectId = (Guid)ViewBag.ProjectId;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <h3 class="card-title text-danger mb-4">Delete Task</h3>
                <p>Are you sure you want to delete the task:</p>
                <h5 class="fw-bold">@Model.Title</h5>
                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="projectId" value="@projectId" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="Index" asp-route-projectId="@projectId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
