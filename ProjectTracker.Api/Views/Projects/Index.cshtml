@model IEnumerable<ProjectTracker.Application.Dtos.ProjectDto>
@{
    ViewData["Title"] = "My Projects";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Projects</h2>
    <a class="btn btn-primary" asp-action="Create">+ New Project</a>
</div>

<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary me-1" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-info me-1" asp-controller="Tasks" asp-action="Index" asp-route-projectId="@p.Id">Tasks</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
