@model ProjectTracker.Application.Dtos.ProjectDto
@{
    ViewData["Title"] = "Delete Project";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <h3 class="card-title text-danger mb-4">Delete Project</h3>
                <p>Are you sure you want to delete the project:</p>
                <h5 class="fw-bold">@Model.Name</h5>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
